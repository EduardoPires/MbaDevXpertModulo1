@model MiniLojaVirtual.Commom.Model.Categoria

@{
    ViewData["Title"] = "Detalhes da categoria";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>Categoria</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
    </dl>
</div>
<div>

    <a class="btn btn-info" asp-action="Edit" asp-route-id="@Model.Id">Editar</a>

    <a asp-action="Index" class="btn btn-warning">Voltar</a>
</div>
